<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginRegisterUser">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/mailUserRegister"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="E-mail"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/nameUserRegister"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:hint="Imię"/>

        <EditText
            android:id="@+id/surnameUserRegister"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:hint="Nazwisko"/>

        <EditText
            android:id="@+id/phoneNumberUserRegister"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:hint="Telefon"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/passwordUserRegister"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:hint="Hasło"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/passwordUserRegister2"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:hint="Powtórz hasło"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/RegisterUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Zarejestruj konto" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>